@model List<StudentVM>
<div class="container">
    <h2>All Students</h2>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Age</th>
                <th>Active Course Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.Age</td>
                    <td>@student.ActiveCourseName</td>
                    <td>
                        <a asp-action="Details"
                           asp-controller="Student"
                           asp-route-id="@student.Id">Details</a>
                        @* <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", "Student", new { id = student.Id })" class="btn btn-danger">Delete</a> *@
                        @Html.ActionLink("Edit", "Edit", "Student", new { id = student.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count == 0)
    {
        <p>No students found.</p>
    }
    <!--HTML HELPER-->
    @* <div>
        @Html.ActionLink("Create New Student", "Create", "Student", null, new { @class = "btn btn-success" })
        </div> *@
    @Html.ActionLink(
    linkText: "Create Student (HTML HELPER)",
        actionName: "Create",
        controllerName: "Student",
        routeValues: null,
        htmlAttributes: new { @class = "btn btn-primary" })

    <!--TAG HELPER-->
    <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create Student (TAG HELPER)</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Go Home</a>
</div>
