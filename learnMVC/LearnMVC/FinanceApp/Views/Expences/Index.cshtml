@model IEnumerable<FinanceApp.Models.Expence>

<h1>My Expences</h1>
<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Decription</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expence in Model)
            {
                <tr>
                    <td>@expence.Description</td>
                    <td>@expence.Amount $</td>
                    <td>@expence.Category</td>
                    <td>@expence.Date.ToString("yyyy-dd-MM")</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>
<h2>Expences Overview</h2>
<div>
    <canvas style="max-width: 450px; max-height: 450px;" id="myChart"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');

    fetch('/Expences/GetChart')
    .then(response => response.json())
    .then(data => {
         new Chart(ctx, 
             {
              type: 'pie',
              data: {
                labels: data.map(d => d.category),
                datasets: [{
                 
                  data: data.map(d => d.total),
                 
                           }]
                  },
              });
    })
</script>