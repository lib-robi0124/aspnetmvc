@using RentalMovie.Services.Dtos

@model List<MovieDto>
@{
    var userId = int.TryParse(Context.Request.Query["userId"], out var idVal) ? idVal : 0;
    bool isLoggedIn = userId > 0;

}

<div class="container py-5">
    <h2 class="mb-4">Available Movies</h2>
   
    @if (isLoggedIn)
    {
        <div>
            <a asp-controller="Rental" asp-action="MyRentals" asp-route-userId="@userId" class="btn btn-outline-info me-2">My Rentals</a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>
        </div>
    }
   
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@movie.ImagePath" class="card-img-top" alt="@movie.Title" style="height: 400px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text mb-1"><strong>Genre:</strong> @movie.Genre</p>
                        <p class="card-text mb-3">
                            <strong>Status:</strong>
                            <span class="badge @(movie.IsAvailable ? "bg-success" : "bg-secondary")">
                                @(movie.IsAvailable ? "Available" : "Unavailable")
                            </span>
                        </p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" asp-route-userId="@userId" class="btn btn-outline-primary">Details</a>
                            @if (!isLoggedIn || !movie.IsAvailable)
                            {
                                <button class="btn btn-secondary" disabled>Rent</button>
                            }
                            else
                            {
                                <form asp-controller="Rental" asp-action="Rent" method="post">
                                    <input type="hidden" name="movieId" value="@movie.Id" />
                                    <input type="hidden" name="userId" value="@userId" />
                                    <button type="submit" class="btn btn-primary">Rent</button>
                                </form>
                            }
                        </div>
                     
                    </div>
                </div>
            </div>
        }
    </div>
</div>
