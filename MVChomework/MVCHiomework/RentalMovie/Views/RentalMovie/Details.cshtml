@using RentalMovie.Services.Dtos
@model MovieDetailsDto
@{
    int userId = int.TryParse(Context.Request.Query["userId"], out var parsed) ? parsed : 0;
    bool isLoggedIn = userId > 0;

}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid h-100 w-100 rounded-start" style="object-fit: cover;" />
                    </div>
                    <div class="col-md-7">
                        <div class="card-body p-4 d-flex flex-column h-100">
                            <h2 class="card-title mb-3">@Model.Title</h2>
                            <ul class="list-group list-group-flush my-3">
                                <li class="list-group-item"><strong>Genre:</strong> @Model.Genre</li>
                                <li class="list-group-item"><strong>Length:</strong> @Model.Length.Hours hr @Model.Length.Minutes min</li>
                                <li class="list-group-item"><strong>Age Restriction:</strong> @Model.AgeRestriction+</li>
                                <li class="list-group-item"><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</li>
                                <li class="list-group-item"><strong>Language:</strong> @Model.Language</li>
                                <li class="list-group-item"><strong>Quantity:</strong> @Model.Quantity</li>
                            </ul>

                            <div class="mt-auto d-flex gap-2">
                                @if (!isLoggedIn || Model.Quantity <= 0)
                                {
                                    <button class="btn btn-secondary w-50" disabled>Rent This Movie</button>
                                }
                                else
                                {
                                    <form asp-action="Rent" asp-controller="Movie" method="post" class="w-50">
                                        <input type="hidden" name="movieId" value="@Model.Id" />
                                        <input type="hidden" name="userId" value="@userId" />
                                        <button type="submit" class="btn btn-primary w-100">Rent This Movie</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
